<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:weightSum="3"
    android:orientation="horizontal"
    android:layout_marginTop="5dp">

    <ImageView
        android:id="@+id/topActionBarLeftButton"
        android:layout_width="@dimen/meallennium_top_action_bar_image_dimensions"
        android:layout_height="@dimen/meallennium_top_action_bar_image_dimensions"
        android:layout_weight="0.2"
        android:src="@mipmap/navigation_drawer_icon" />

    <com.benohayon.meallennium.ui.custom_views.stylable.StylableTextView
        android:id="@+id/topActionBarCenterText"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        tools:text="Hello, User"
        android:textSize="18dp"
        android:layout_gravity="center_vertical"
        android:gravity="center"
        android:layout_weight="2.6"/>

    <ImageView
        android:id="@+id/topActionBarRightButton"
        android:layout_width="@dimen/meallennium_top_action_bar_image_dimensions"
        android:layout_height="@dimen/meallennium_top_action_bar_image_dimensions"
        android:layout_weight="0.2"
        android:src="@mipmap/search_icon"/>

</LinearLayout>